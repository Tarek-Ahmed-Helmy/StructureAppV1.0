@model Department

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>
<div>
    <h4>Department</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">Department Name</dt>
        <dd class = "col-sm-10">@Model.DepartmentName</dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
